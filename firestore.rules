rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isMember(guildId) {
      return signedIn() && exists(/databases/$(database)/documents/guilds/$(guildId)/members/$(request.auth.uid));
    }

    function isCreator(guildId) {
      return signedIn()
        && get(/databases/$(database)/documents/guilds/$(guildId)).data.createdBy == request.auth.uid;
    }

    function isAdmin(guildId) {
      return isMember(guildId)
        && (
          get(/databases/$(database)/documents/guilds/$(guildId)/members/$(request.auth.uid)).data.role == 'admin'
          || isCreator(guildId)
        );
    }

    function onlyKeys(keys) {
      return request.resource.data.keys().hasOnly(keys);
    }

    match /users/{userId} {
      allow read, create, update: if signedIn()
        && request.auth.uid == userId
        && onlyKeys(['displayName', 'email', 'bio', 'avatarUrl', 'createdAt', 'guildIds', 'tagId']);
      allow delete: if false;
    }

    match /inviteCodes/{code} {
      allow read: if signedIn();
      allow create: if signedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.guildId is string;
      allow delete: if signedIn()
        && (
          resource.data.createdBy == request.auth.uid
          || (resource.data.guildId is string && isAdmin(resource.data.guildId))
        );
      allow update: if false;
    }

    match /guilds/{guildId} {
      allow create: if signedIn()
        && request.resource.data.createdBy == request.auth.uid
        && onlyKeys(['name', 'description', 'imageUrl', 'inviteCode', 'xpTable', 'createdAt', 'createdBy']);
      allow read: if isMember(guildId);
      allow update: if isAdmin(guildId)
        && onlyKeys(['name', 'description', 'imageUrl', 'inviteCode', 'xpTable', 'createdAt', 'createdBy'])
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.inviteCode == resource.data.inviteCode;
      allow delete: if isAdmin(guildId);

      match /members/{memberId} {
        allow read: if isMember(guildId)
          || request.auth.uid == memberId
          || (resource.data.userId == request.auth.uid);
        allow create: if signedIn()
          && request.auth.uid == memberId
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.inviteCode is string
          && exists(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode))
          && get(/databases/$(database)/documents/inviteCodes/$(request.resource.data.inviteCode)).data.guildId == guildId
          && request.resource.data.role in ['admin', 'member']
          && request.resource.data.xp is int
          && onlyKeys(['userId', 'displayName', 'avatarUrl', 'xp', 'role', 'inviteCode', 'joinedAt']);
        allow update: if isAdmin(guildId)
          && onlyKeys(['userId', 'displayName', 'avatarUrl', 'xp', 'role', 'inviteCode', 'joinedAt'])
          && request.resource.data.userId == resource.data.userId
          && request.resource.data.inviteCode == resource.data.inviteCode
          && request.resource.data.joinedAt == resource.data.joinedAt
          && request.resource.data.role in ['admin', 'member']
          && request.resource.data.xp is int
          || (request.auth.uid == memberId
            && onlyKeys(['userId', 'displayName', 'avatarUrl', 'xp', 'role', 'inviteCode', 'joinedAt'])
            && request.resource.data.userId == resource.data.userId
            && request.resource.data.inviteCode == resource.data.inviteCode
            && request.resource.data.joinedAt == resource.data.joinedAt
            && request.resource.data.role == resource.data.role
            && request.resource.data.xp == resource.data.xp);
        allow delete: if isAdmin(guildId) || request.auth.uid == memberId;
      }

      match /calendar/{dayId} {
        allow read, write: if isMember(guildId);
      }

      match /safety/{docId} {
        allow read, write: if isMember(guildId);
      }

      match /snacks/{docId} {
        allow read, write: if isMember(guildId);
      }

      match /chat/{msgId} {
        allow read: if isMember(guildId);
        allow create: if isMember(guildId)
          && (
            (
              request.resource.data.type in ['text', 'gif']
              && request.resource.data.createdBy == request.auth.uid
              && onlyKeys(['type', 'text', 'gifUrl', 'createdAt', 'createdBy', 'displayName', 'avatarUrl', 'tagId', 'tagLabel'])
              && (
                (request.resource.data.type == 'text' && request.resource.data.text is string)
                || (request.resource.data.type == 'gif' && request.resource.data.gifUrl is string)
              )
            )
            || (
              request.resource.data.type == 'system'
              && isAdmin(guildId)
              && onlyKeys(['type', 'text', 'createdAt'])
              && request.resource.data.text is string
            )
          );
        allow update, delete: if false;
      }

      match /rules/{docId} {
        allow read: if isMember(guildId);
        allow create, update: if isAdmin(guildId);
        allow delete: if isAdmin(guildId);
      }
    }
  }
}
